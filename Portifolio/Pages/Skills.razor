@page "/skills"

<h3>Skills</h3>
@foreach (var skill in skills)
{
    <div class="row">
        <div class="col-md-12">
            <h3>@skill.Title</h3>
            <p class="row">
                @foreach (var value in skill.Values)
                {
                    <h4><span style="margin: 2px" class="badge badge-warning">@value.ToUpper()</span></h4>
                }
            </p>
        </div>
    </div>
    <hr />
}

